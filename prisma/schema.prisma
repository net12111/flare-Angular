// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  bio       UserBio? @relation(fields: [userBioId], references: [id])
  userBioId String?
}

model UserBio {
  id          String @id @default(cuid())
  description String?
  github      String?
  twitter     String?
  linkedin    String?
  facebook    String?
  hashnode    String?
  devto       String?
  User        User[]
}
